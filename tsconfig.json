{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "paths": {
            "@common/*": [
                "./src/common/*"
            ],
            "@type/*": [
                "./src/types/*"
            ],
            "@kintone/*": [
                "./node_modules/@kintone/*"
            ],
            "@static/*": [
                "./src/static/*"
            ]
        }
    },
    "typeRoots": [
        "src/types",
        "node_modules/@types"
    ],
    "files": [
        "./node_modules/@kintone/dts-gen/kintone.d.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}